{
  "compileOnSave": false,
  "compilerOptions": {
    "noLib": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "module": "commonjs", 
    "moduleResolution": "node",
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es2016", "dom", "esnext.asynciterable"]
  },
  "include": ["./test/**/*"],
  "exclude": ["./node_modules/**"]
}
